# OpenAI API Key (optional, for remote API mode)
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# X.AI API Key (for Grok, optional)
VITE_XAI_API_KEY=your-xai-api-key-here

# ============================================
# Backend Configuration - Local LLM (Ollama)
# ============================================
USE_LOCAL_LLM=1
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=qwen3:0.6b

# ============================================
# Remote LLM Configuration (optional)
# Set USE_LOCAL_LLM=0 to use OpenAI API
# ============================================
LLM_API_KEY=sk-your-openai-api-key-here
LLM_API_BASE=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini

# ============================================
# Model Configuration
# ============================================
ASR_MODEL=iic/SenseVoiceNano
TTS_MODEL=CosyVoice-300M

# Performance (uncomment if using CPU only)
# USE_CPU=1

# WebSocket URL (for frontend)
VITE_BACKEND_WS=ws://localhost:8000/ws
